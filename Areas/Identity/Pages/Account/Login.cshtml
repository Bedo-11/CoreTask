@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

    @*<h2>@ViewData["Title"]</h2>*@

    <div class="container form-b rig bShadow bShadow-62 animate__animated animate__fadeInDown">
        <div class="row d-flex justify-content-center mb-5">

            <h2 style="text-align: center" class="mt-5">تسجيل الدخول</h2>

        </div>


        <form method="post">

            <div class="row">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group col-md-12">
                    <label asp-for="Input.Email">البريد الالكتروني</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Input.Password">كلمة المرور</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>


                <div class="form-group col-md-12">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>


            </div>

            <div style="display: flex; justify-content: center" class="row mt-4 mb-5">
                <div class="col-md-4">
                    <div class="form-group">
                        <button type="submit" class="form-control submit">
                            تسجيل دخول   <i class="fas fa-save"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div style="display: flex; justify-content: center" class="form-group">
                <div>
                    <p>
                        <a asp-page="./ForgotPassword">نسيت كلمة المرور؟</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">انشاء حساب جديد</a>
                    </p>
                </div>
            </div>
        </form>

    </div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
