@model WebApplication3.Models.Reportz

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Reportz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StatuezId" class="control-label"></label>
                <select asp-for="StatuezId" class ="form-control" asp-items="ViewBag.StatuezId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Topicz" class="control-label"></label>
                <input asp-for="Topicz" class="form-control" />
                <span asp-validation-for="Topicz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Textz" class="control-label"></label>
                <input asp-for="Textz" class="form-control" />
                <span asp-validation-for="Textz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input type="file" name="myfile" id="file" accept=".png,.jpg,.gif,.tif" class="btn btn-default" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <input asp-for="ImageUrl" id="fileinput" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#file").change(function () {
                if ($("#file").val() != "") {
                    $("#fileinput").prop("value", $("#file").val().split('\\').pop());
                }
            });
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
