@model WebApplication3.Models.Reportz

@{
    ViewData["Title"] = "Delete";
}

<div class="container form-b bShadow bShadow-62 animate__animated animate__fadeInDown">
    <div class="row d-flex justify-content-center mb-5">


        <h3>هل انت متأكد من حذف هذا البلاغ؟</h3>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="container">
            <div class="row">
                <table class="table table-striped table-bordered mb-5">
                    <thead>
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(model => model.Statuez)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.User)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Topicz)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Textz)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>@Html.DisplayFor(model => model.Statuez.Name)</th>
                            <td>@Html.DisplayFor(model => model.UserId) </td>
                            <td>@Html.DisplayFor(model => model.Topicz)</td>
                            <td>
                                @Html.DisplayFor(model => model.Textz)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <div style="display: flex; justify-content: center" class="row mt-4 mb-5">
                <div class="col-md-4">
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input style="width: 100%" type="submit" value="تأكيد الحذف" class="btn btn-danger" /> 
                        </form>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <a style="width: 100%" class="btn btn btn-info" asp-action="Index">
                            رجوع      <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




